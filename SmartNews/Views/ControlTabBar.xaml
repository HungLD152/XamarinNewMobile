<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            HorizontalScrollBarVisibility="Never"
            x:Class="SmartNews.Views.ControlTabBar" Orientation="Horizontal" x:Name="ScrollBar">
    <StackLayout>
        <Grid HorizontalOptions="FillAndExpand">
            <StackLayout x:Name="Container" Orientation="Horizontal" Spacing="0"/>
        </Grid>
        <StackLayout x:Name="BottomColor" HeightRequest="4"/>
    </StackLayout>
</ScrollView>
