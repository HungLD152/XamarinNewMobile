<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartNews.Views.RssDetailsPage">
    <ContentPage.Content>
        <StackLayout x:Name="Detail" >
            <Label x:Name="labelLoading" Text="Loading..." HorizontalOptions="Center" IsVisible="false"/>
            <WebView x:Name="webViewDetail"
                     VerticalOptions="FillAndExpand"
                     Navigated="webviewNavigated"
                     Navigating="webviewNavigating"
                     HorizontalOptions="FillAndExpand"/>
            <StackLayout Orientation="Horizontal" HeightRequest="35" Margin="5,0,5,0">
                <ImageButton Source="back.png"
                        HorizontalOptions="StartAndExpand"
                        Clicked="OnBackButtonClicked" />
                <ImageButton Source="refresh.png"
                        HorizontalOptions="CenterAndExpand"
                        Clicked="OnRefreshButtonClicked" />
                <ImageButton Source="next.png"
                        HorizontalOptions="EndAndExpand"
                        Clicked="OnForwardButton_Clicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
